{% extends 'base.html.twig' %}

{% block title %}Member index{% endblock %}

{% block body %}
    <h1>Member index</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">First_name</th>
                <th scope="col">Job</th>
                <th scope="col">Birth_date</th>
                <th scope="col">Picture</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td scope="row">{{ member.id }}</td>
                <td>{{ member.name }}</td>
                <td>{{ member.firstName }}</td>
                <td>{{ member.job }}</td>
                <td>{{ member.birthDate ? member.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ member.picture }}</td>
                <td>
                    <a href="{{ path('member_show', {'id': member.id}) }}">show</a>
                    <a href="{{ path('member_edit', {'id': member.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('member_new') }}">Create new</a>
{% endblock %}
