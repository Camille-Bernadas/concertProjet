{% extends 'base.html.twig' %}

{% block title %}Member{% endblock %}

{% block body %}
    <h1>Member</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ member.name }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ member.firstName }}</td>
            </tr>
            <tr>
                <th>Job</th>
                <td>{{ member.job }}</td>
            </tr>
            <tr>
                <th>Birth_date</th>
                <td>{{ member.birthDate ? member.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ member.picture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('member_index') }}"><button type="button" class="btn btn-success">Back to List</button></a>

    <a href="{{ path('member_edit', {'id': member.id}) }}"><button type="button" class="btn btn-primary">Update</button></a>

{% endblock %}
